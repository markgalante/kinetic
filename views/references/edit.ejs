<%- include("../partials/header") %>

<h1 class="text-center">Edit Reference for <%= exercise.name %></h1>
<form class="w-75 mx-auto" action="/exercises/<%= exercise.slug %>/references/<%= reference.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="reference[authors]" value="<%= reference.authors %>">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="reference[title]" value="<%= reference.title %>">
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="reference[journal]" value="<%= reference.journal %>">
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <input class="form-control" type="text" name="reference[year]" value="<%= reference.year.getFullYear() %>">
        </div>
        <div class="form-group col-md-3">
            <input class="form-control" type="number" name="reference[edition]" value="<%= reference.edition %>">
        </div>
        <div class="form-group col-md-3">
            <input class="form-control" type="number" name="reference[pageStart]" value="<%= reference.pageStart %>">
        </div>
        <div class="form-group col-md-3">
            <input class="form-control" type="number" name="reference[pageEnd]" value="<%= reference.pageEnd %>">
        </div>
    </div> 
    <input class="btn btn-primary btn-rounded btn-block" type="submit"> 
</form>

<%- include("../partials/footer") %>