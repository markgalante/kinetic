<%- include('../partials/header') %>

<h1 class="text-center">Edit Profile</h1>

<form action="/profile/<%= user.username %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="newUsername">Username</label>
        <input class="form-control" id="newUsername" type="text" name="username" value="<%= user.username %>">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="first-name">First Name</label>
            <input class="form-control" id="first-name" type="text" name="firstName" value="<%= user.firstName %>">
        </div>
        <div class="form-group col-md-6">
            <label for="last-name">Last Name</label>
            <input class="form-control" id="last-name" type="text" name="lastName" value="<%= user.lastName %>">
        </div>
    </div>
    <div class="form-group">
        <label for="email-address">Email address</label>
        <input class="form-control" id="email-address" type="email" name="email" value="<%= user.email %>">
    </div>
    <div class="form-row">
        <div class="form-group col-md-8">
            <label for="pro">Profession</label>
            <input list="select-profession" id="pro" class="form-control" name="profession" value="<%= user.profession %>">
                <datalist id="select-profession">
                    <option>Physiotherapist/Physical Therapist</option>
                    <option>Occupational Therapist</option>
                    <option>Biokineticist</option>
                    <option>None of the above</option>
                </datalist>
        </div>
        <div class="form-group col-md-4">
            <label for="year-of-grad">Year of Qualification</label>
            <input list="grad-year" id="year-of-grad" class="form-control" name="graduated" value="<%= user.graduated %>">
                <datalist id="grad-year">
                    <option>Student</option>
                    <% var start = 1950; var current = new Date().getFullYear()-1; var year; %>  
                    <% for(year=current; year >= start; year--){ %> 
                        <option><%= year %></option>
                    <% } %>  
                </datalist>
            </select>
        </div>
    </div>
    <div class="form-group">
        <textarea class="form-control" rows="5" name="bio"><%= user.bio %></textarea>
    </div>
    <input type="file" name="image" accept="image/*">
    <div class="form-group">
        <button class="btn btn-primary w-100 submit-button">Submit</button>
    </div>
</form>

<%- include('../partials/footer') %>