<%- include("../partials/header") %>

<h1 class="text-center">Register</h1>
<div class="row">
    <form class="w-75 m-auto"action="/register" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" id="username" type="text" name="username" required>
        </div>
        <div class="form-row">
           <div class="form-group col-md-6">
                <label for="firstName">First Name</label>
                <input class="form-control" id="firstName" type="text" name="firstName" required>
           </div>
           <div class="form-group col-md-6">
                <label for="lastName">Surname</label>
                <input class="form-control" id="lastName" type="text" name="lastName" required>
            </div>
        </div>
        <div class="form-group">
            <label for="email">Email address:</label>
            <input class="form-control" id="email" type="email" name="email" placeholder="john@example.com" required>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="profession">Profession</label>
                <select class="form-control" name="profession" id="profession">
                    <option>Physiotherapist/Physical Therapist</option>
                    <option>Occupational Therapist</option>
                    <option>Biokineticist</option>
                    <option>None of the above</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="qualified">Qualified Since</label>
                <select class="form-control" id="qualified" name="graduated">
                    <% var start = 1950; var current = new Date().getFullYear(); var year; %>  
                    <% for(year=current; year >= start; year--){ %> 
                        <option><%= year %></option>
                    <% } %>  
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="bio">About Yourself</label>
            <textarea id="bio" class="form-control" name="bio" rows=5></textarea>
        </div>
        <div class="form-group">
            <label for="image">Profile Picture</label>
            <input type="file" name="image" id="image" accept="image/*"> 
        </div>
        <div class="form-group">
            <label for="password">Enter Password</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <div class="form-group">
            <label for="password2">Re-enter Password</label>
            <input type="password" class="form-control" id="password2">
        </div>
        <div class="hideAlert">
            <p class="alertText">Passwords do not match</p>
        </div>
        <div class="form-group">    
            <button class="btn btn-secondary w-100 disabled" id="registerButton" type="submit" value="Register" disabled>Register</button>
        </div>
    </form> 
</div>

<script src="ejs.min.js"></script>
<script>
    console.log("WORKING")
    const password2 = document.querySelector("#password2");  
    const password = document.querySelector("#password"); 
    password2.addEventListener("input", ()=>{ 
        if(password2.value === password.value){ 
            document.querySelector("#registerButton").className="btn btn-primary w-100"
            document.querySelector("#registerButton").disabled=false;
            document.querySelector(".showAlert").setAttribute("class", "hideAlert");
        } else{
            document.querySelector("#registerButton").className="btn btn-secondary w-100 disabled"
            document.querySelector("#registerButton").disabled=true;
            document.querySelector(".hideAlert").setAttribute("class", "showAlert"); 
        } 
}); 
</script>

<%- include("../partials/footer") %>