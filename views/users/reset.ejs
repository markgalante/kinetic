<%- include('../partials/header') %>

<h1 class="text-center my-5">Reset Password</h1>
<form class="w-50 mx-auto" action="/reset/<%= token %>" method="POST">
    <div class="form-group">
        <label for="newPassword">Enter new password</label>
        <input type="password" id="newPassword" name="password" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="confirm">Confirm new password</label>
        <input type="password" id="confirm" name="confirm" class="form-control" required>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-rounded submit-button">Submit</button> 
    </div>
</form>

<%- include('../partials/footer') %>